<assembly>
	<id>bundle</id>

	<includeBaseDirectory>false</includeBaseDirectory>
	<baseDirectory>${artifactId}</baseDirectory>

	<formats>
		<format>tar.gz</format>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>target/main/python</directory>
			<outputDirectory>bin</outputDirectory>
			<includes>
				<include>ss-*</include>
				<include>*.py</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/main/python</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>slipstream/**/*.py</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>target/main/scripts</directory>
			<outputDirectory>sbin</outputDirectory>
			<includes>
				<include>slipstream-*</include>
				<include>slipstream.bootstrap*</include>
				<include>*.setup</include>
				<include>*.setenv</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/external</directory>
			<outputDirectory>lib</outputDirectory>
			<excludes>
			 <exclude>**/*.pyc</exclude>
			 <exclude>mock/**</exclude>
			</excludes>
		</fileSet>

	</fileSets>

	<files>
	  <file>
	    <source>src/setup.py</source>
	    <outputDirectory>./</outputDirectory>
	    <fileMode>0755</fileMode>
	  </file>
	  <file>
	    <source>src/setup.cfg</source>
	    <outputDirectory>./</outputDirectory>
	    <fileMode>0644</fileMode>
	  </file>
	</files>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory></outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>man/**</include>
				</includes>
			</unpackOptions>
		</dependencySet>
	</dependencySets>

</assembly>
